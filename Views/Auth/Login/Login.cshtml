@{
    Layout = "_AuthLayout";
    var errorMessage = ViewData["ErrorMessage"] as string;
}

<main role="main" class="flex-grow-1 h-full w-full bg-neutral-900 p-4">

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div id="invalidCredentialsError"
             class="mx-auto w-3/4 rounded-md bg-red-500 p-2 text-center text-sm text-neutral-200 shadow" role="alert">
            @errorMessage
        </div>
    }

    @using (Html.BeginForm("LoginView", "Auth", FormMethod.Post, new { @class = "mt-5 flex text-sm flex-col gap-4 justify-start max-w-xl items-center mx-auto" }))
    {
        <label class="w-full px-3 py-2 bg-black border-2 border-gray-800 rounded-md text-gray-100 placeholder-gray-600
                  focus:outline-none focus:ring-2 focus:ring-gray-700 focus:border-gray-700
                  transition duration-300 ease-in-out
                  shadow-inner shadow-gray-900
                  font-metal text-sm
                  bg-opacity-80 backdrop-filter backdrop-blur-sm
                  hover:bg-gray-900 hover:bg-opacity-50">
            @Html.TextBox("", "", new
            {
                @class = "w-full text-neutral-200", id = "username", name =
                    "Username",
                placeholder = "Username", autocomplete = false
            })
        </label>

        <label class="w-full px-3 py-2 bg-black border-2 border-gray-800 rounded-md text-gray-100 placeholder-gray-600
                  focus:outline-none focus:ring-2 focus:ring-gray-700 focus:border-gray-700
                  transition duration-300 ease-in-out
                  shadow-inner shadow-gray-900
                  font-metal text-sm
                  bg-opacity-80 backdrop-filter backdrop-blur-sm
                  hover:bg-gray-900 hover:bg-opacity-50">
            @Html.Password("", "", new
            {
                @class = "w-full text-neutral-200", id = "password", name =
                    "Password",
                placeholder = "Password", autocomplete = false
            })
        </label>


        <button type="submit"
                class="px-8 py-3 bg-black text-gray-200 tracking-widest border border-gray-800 hover:bg-gray-900
                 focus:outline-none focus:border-gray-500 transition-all duration-300 font-thin
                text-sm transform text-center">
            Login
        </button>
    }
</main>

@section Scripts {
    <script src="~/dist/login.bundle.js" type="module"></script>
}
