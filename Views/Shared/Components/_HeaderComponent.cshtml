@{
    var userName = ViewData["UserName"] as string;
}

<nav>
    <div class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4 new-rocker">
        <a asp-controller="Home" asp-action="Home" class="animate-pulse text-3xl text-white max-md:text-xl">The
            Void</a>

        <div class="flex flex-row justify-between gap-x-4">
            @if (userName is not null && userName.Length > 0)
            {
                <p class="my-5 text-center text-xl capitalize text-purple-500">Hello @userName</p>
            }

            <button type="button" data-drawer-target="drawer-navigation" data-drawer-show="drawer-navigation"
                    aria-controls="drawer-navigation"
                    class="flex self-center items-center p-2 w-10 h-10 justify-center text-sm text-gray-500 rounded-lg
                    hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200 dark:text-gray-400 dark:hover:bg-gray-700 dark:focus:ring-gray-600">
                <svg class="w-5 h-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none"
                     viewBox="0 0 17 14">
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                          d="M1 1h15M1 7h15M1 13h15"/>
                </svg>
            </button>
        </div>
    </div>
</nav>
