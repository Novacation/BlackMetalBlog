@model BlackMetalBlog.Models.Entities.PostsEntity

@{
    Layout = "_LoggedInLayout";
}

@await Html.PartialAsync("Components/Sidebar/_Sidebar")


<main class="flex mx-auto flex-col justify-start items-center max-w-4xl p-4 gap-y-10 w-full">

    <section class="w-full gap-y-2 flex flex-col justify-start items-center">
        <h1 class="w-full max-sm:text-xl text-2xl text-neutral-100">@Model.Title</h1>
        <hr class="w-full border-neutral-200"/>
    </section>

    <iframe style="border-radius:12px"
            src="@($"https://open.spotify.com/embed/playlist/{Model.PlaylistId}")" width="100%"
            height="352" allowfullscreen=""
            allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture" loading="lazy"></iframe>

    <p class="text-base text-neutral-200">@Model.Content</p>

</main>
